{
  "name": "Spigot Author Stats",
  "version": "1.0.0",
  "description": "Shows information about Spigot authors on their resource page.",
  "permissions": [
    "https://www.spigotmc.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.spigotmc.org/resources/authors/*/",
        "https://www.spigotmc.org/resources/authors/*/*",
        "https://www.spigotmc.org/members/*/"
      ],
      "js": [
        "table.js",
        "logic.js",
        "authorStats.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  "manifest_version": 2
}